[flake8]
# Match black line length
max-line-length = 88
# Don't complain about unused imports in init.py
per-file-ignores = __init__.py:F401

# ignore things black controls already
ignore =
    E203, # whitespace before : 
    W503, # line break before binary operator
    TC006, # complains when cast argument is not a string

exclude=
    # autogenerated code
    meadowrun_pb2.pyi, meadowrun_pb2.py,
    # vendorized code
    src/meadowrun/_vendor,
    dist,
    # config file
    src/meadowrun/aws_integration/management_lambdas/config.py,
    custom_config.py

# for flake8-type-checking
enable-extensions = TC, TC1